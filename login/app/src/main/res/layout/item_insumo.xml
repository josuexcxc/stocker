<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/input7">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botella de vidrio"
        android:paddingLeft="18dp"
        style="@style/font_bebas"
        android:textSize="20sp"
        ></TextView>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caja"
        android:paddingLeft="20dp"
        style="@style/font_title"
        android:textColor="#000000"
        android:layout_below="@+id/tv1"
        ></TextView>

        <TextView
            android:id="@+id/tvcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="con"
            android:textColor="#8d770a"
            style="@style/font_title"
            android:layout_marginLeft="7dp"
            android:layout_below="@id/tv1"
            android:layout_toRightOf="@id/tv2"
            ></TextView>
        <TextView
            android:id="@+id/tvcunidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            style="@style/font_title"
            android:layout_below="@id/tv1"
            android:layout_toRightOf="@id/tvcon"
            android:layout_marginLeft="10dp"
            ></TextView>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8D770A"
        android:text="Cantidad:"
        android:textSize="13sp"
        android:fontFamily="@font/sf"
        android:layout_marginLeft="170dp"
        android:layout_below="@+id/tv1"
        ></TextView>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="255"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="@font/sf"
        android:background="@drawable/ovalo_back"
        android:layout_toRightOf="@+id/tv3"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv1"
        ></TextView>
    </RelativeLayout>

</RelativeLayout>